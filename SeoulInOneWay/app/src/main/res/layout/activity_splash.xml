<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <View
        android:id="@+id/logo_red"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:background="@drawable/rectangle_radius_10dp"
        app:layout_constraintBottom_toTopOf="@id/logo_blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/seoul_red"/>
    <View
        android:id="@+id/logo_blue"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:background="@drawable/rectangle_radius_10dp"
        android:backgroundTint="@color/seoul_blue"
        android:layout_marginBottom="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logo_green"/>
    <View
        android:id="@+id/logo_green"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:background="@drawable/rectangle_radius_10dp"
        android:backgroundTint="@color/seoul_green"
        app:layout_constraintBottom_toTopOf="@id/logo_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="SIO"
        android:textAlignment="center"
        android:layout_marginBottom="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>