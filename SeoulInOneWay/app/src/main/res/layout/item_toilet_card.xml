<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    app:cardCornerRadius="10dp"
    style="@style/Base.TextAppearance.AppCompat.Widget.Button"
    android:minHeight="100dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:id="@+id/txt_toilet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ㅇㅇ화장실"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:paddingBottom="5dp"/>



            <TextView
                android:id="@+id/txt_toilet_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울 롸롸롸롸, 롸롸리리 (와라랄)"
                android:textSize="15dp"
                android:textColor="#6E6E6E"
                app:layout_constraintTop_toBottomOf="@id/txt_toilet_name"/>

            <TextView
                android:id="@+id/txt_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEL : "
                android:textSize="15dp"
                android:textColor="#6E6E6E"
                app:layout_constraintTop_toBottomOf="@id/txt_toilet_address"/>

            <TextView
                android:id="@+id/txt_toilet_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textSize="15dp"
                android:textColor="#6E6E6E"
                android:autoLink="phone"
                app:layout_constraintTop_toBottomOf="@id/txt_toilet_address"
                app:layout_constraintLeft_toRightOf="@id/txt_tel"/>


        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>