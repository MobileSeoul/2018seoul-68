<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    app:cardCornerRadius="10dp"
    style="@style/Base.TextAppearance.AppCompat.Widget.Button"
    android:minHeight="100dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txt_parking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주차장1"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:paddingBottom="5dp"/>



            <TextView
                android:id="@+id/txt_parking_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울 와랄라 (와라랄)"
                android:textSize="15dp"
                android:textColor="#6E6E6E"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_name"/>

            <TextView
                android:id="@+id/txt_parking_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유료/무료"
                android:textSize="15dp"
                android:textColor="#6E6E6E"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_address"
                />


            <TextView
                android:id="@+id/txt_parking_minimum_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="15dp"
                android:textColor="#6E6E6E"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_pay"
                />

            <TextView
                android:id="@+id/txt_parking1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 분에 "
                android:textSize="15dp"
                app:layout_constraintLeft_toRightOf="@id/txt_parking_minimum_time"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_pay"
                />

            <TextView
                android:id="@+id/txt_parking_minimum_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="15dp"
                android:textColor="#6E6E6E"
                app:layout_constraintLeft_toRightOf="@id/txt_parking1"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_pay"
                />

            <TextView
                android:id="@+id/txt_parking2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 원, 이후 "
                android:textSize="15dp"
                app:layout_constraintLeft_toRightOf="@id/txt_parking_minimum_fare"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_pay"
                />

            <TextView
                android:id="@+id/txt_parking_extra_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="15dp"
                android:textColor="#6E6E6E"
                app:layout_constraintLeft_toRightOf="@id/txt_parking2"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_pay"
                />

            <TextView
                android:id="@+id/txt_parking3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분당 "
                android:textSize="15dp"
                app:layout_constraintLeft_toRightOf="@id/txt_parking_extra_time"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_pay"
                />

            <TextView
                android:id="@+id/txt_parking_extra_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="15dp"
                android:textColor="#6E6E6E"
                app:layout_constraintLeft_toRightOf="@id/txt_parking3"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_pay"
                />

            <TextView
                android:id="@+id/txt_parking4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 원 추가 "
                app:layout_constraintLeft_toRightOf="@id/txt_parking_extra_fare"
                app:layout_constraintTop_toBottomOf="@id/txt_parking_pay"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>