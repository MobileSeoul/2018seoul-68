<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/container_traditional_market"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivTraditionalMarket"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_market"
                        android:scaleType="fitXY"
                        android:alpha="0.6"/>

                    <TextView
                        android:id="@+id/tvTraditionalMarket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전통시장"
                        android:textSize="50dp"
                        android:layout_weight="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/container_food_truck"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/ivFoodTruck"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_foodtruck"
                        android:scaleType="fitXY"
                        android:alpha="0.6"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="푸드트럭"
                        android:textSize="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <!--박물관-->
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/container_Museum"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/ivMuseum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_museum"
                        android:scaleType="fitXY"
                        android:alpha="0.6"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="박물관"
                        android:textSize="50dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                </android.support.constraint.ConstraintLayout>
                <!--약국-->
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/container_drugStore"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/ivDrugstore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_drugstore"
                        android:scaleType="fitXY"
                        android:alpha="0.6"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="약국"
                        android:textSize="50dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">


                <!--주차장-->
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/container_parking"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivParking"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_parking"
                        android:scaleType="fitXY"
                        android:alpha="0.6"/>

                    <TextView
                        android:id="@+id/tvParking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="주차장"
                        android:textSize="50dp"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.506" />

                </android.support.constraint.ConstraintLayout>

                <!--화장실-->
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/container_toilet"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivToilet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_toilet"
                        android:scaleType="fitXY"
                        android:alpha="0.6"/>

                    <TextView
                        android:id="@+id/tvToilet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="화장실"
                        android:textAlignment="center"
                        android:textSize="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.506" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <!--전통시장 푸드트럭-->

        </LinearLayout>
    </ScrollView>

    <!--타이틀-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            style="@style/Widget.Sio.CollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#f2f2f2"/>

            <LinearLayout
                style="@style/Widget.Sio.CollapsingToolbarContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.65">

                <View
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_radius_10dp"
                    android:backgroundTint="@color/seoul_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모아보기"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:layout_marginLeft="10dp"
                    android:text="급할 때! 필요할 때! 필요한 정보만!"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
